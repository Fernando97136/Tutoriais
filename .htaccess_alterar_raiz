RewriteEngine on
RewriteCond %{HTTP_HOST} ^seu-dominio.com$ [NC,OR] RewriteCond %{HTTP_HOST} ^www.seu-dominio.com$
RewriteCond %{REQUEST_URI} !pasta/
RewriteRule (.*) /pasta/$1 [L]

